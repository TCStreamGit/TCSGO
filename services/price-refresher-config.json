    "userAgent": "TCSGO-Price-Refresher/1.1 (+https://api.skinport.com; https://steamcommunity.com)"
  },
  "logging": {
    "level": "INFO",
    "rotateAfterDays": 7,
    "maxLogFiles": 7
  },
  "git": {
    "enabled": true
  },
  "paths": {
    "base": "A:\\Development\\Version Control\\Github\\TCSGO",
    "pricesJson": "data/prices.json",
    "caseOddsDir": "Case-Odds",
