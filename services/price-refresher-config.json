{
  "schedule": {
    "enabled": true,
    "bootTimeRefresh": true,
    "daysOfWeek": ["sunday"],
    "time": "03:00",
    "checkIntervalSeconds": 30.0
  },
  "api": {
    "retries": {
      "maxAttempts": 3,
      "backoffSeconds": 10
    }
  },
  "cache": {
    "maxAgeHours": 168,
    "forceRefresh": false,
    "checkpointEveryItems": 25
  },
  "providers": {
    "rotationMode": "round_robin",
    "fallbackOnFailure": true,
    "skipRoundsOnFailure": 10,
    "itemDelaySecondsMin": 3.0,
    "itemDelaySecondsMax": 5.0,
    "bulkCache": {
      "dir": "services\\bulk-cache",
      "maxAgeHours": 12,
      "timeoutSeconds": 120,
      "staggerDelaySecondsMin": 2.0,
      "staggerDelaySecondsMax": 6.0
    },
    "aggregator": {
      "method": "mean",
      "minSources": 1,
      "outlierClampCadMin": 0.01,
      "outlierClampCadMax": 99999.99
    },
    "white_market": {
      "enabled": true,
      "url": "https://s3.white.market/export/v1/prices/730.json",
      "currency": "USD"
    },
    "market_csgo": {
      "enabled": true,
      "mode": "class_instance",
      "urlPrices": "https://market.csgo.com/api/v2/prices/USD.json",
      "urlClassInstance": "https://market.csgo.com/api/v2/prices/class_instance/USD.json",
      "priceField": "avg_price",
      "currency": "USD",
      "apiKey": "",
      "apiKeyEnvVar": "MARKET_CSGO_API_KEY"
    },
    "csgotrader": {
      "enabled": false,
      "url": "https://prices.csgotrader.app/latest/prices_v6.json",
      "currency": "USD"
    },
    "skinport": {
      "enabled": true,
      "baseUrl": "https://api.skinport.com/v1",
      "appid": 730,
      "currency": "CAD",
      "pricesAreUsd": true,
      "tradable": 0,
      "useSalesHistory": true,
      "historyWindow": "last_7_days",
      "historyField": "median",
      "timeoutSeconds": 180
    },
    "steam": {
      "enabled": true,
      "appid": 730,
      "currency": 20,
      "delaySeconds": 3.0,
      "timeoutSeconds": 30,
      "keyMarketHashNames": {
        "csgo-case-key": "CS:GO Case Key",
        "default": "CS:GO Case Key"
      }    
    },
    "csfloat": {
      "enabled": true,
      "apiKey": "",
      "apiKeyEnvVar": "CSFLOAT_API_KEY",
      "useForCases": false,
      "useForKeys": false,
      "useForItems": true,
      "delaySeconds": 0.5,
      "timeoutSeconds": 30
    },
    "fx": {
      "timeoutSeconds": 20
    }
  },
  "http": {
    "userAgent": "TCSGO-Price-Refresher/1.1 (+https://api.skinport.com; https://steamcommunity.com)"
  },
  "logging": {
    "level": "INFO",
    "rotateAfterDays": 7,
    "maxLogFiles": 7
  },
  "git": {
    "enabled": true
  },
  "paths": {
    "base": "A:\\Development\\Version Control\\Github\\TCSGO",
    "pricesJson": "data/prices.json",
    "caseOddsDir": "Case-Odds",
    "logsDir": "logs\\price-refresher",
    "overridesJson": "services\\market-hash-overrides.json",
    "secretsJson": "services\\price-refresher-secrets.json",
    "skippedJson": "services\\price-refresher-skipped.json",
    "lockFile": "services\\price-refresher.lock",
    "daemonStateJson": "services\\price-refresher-daemon-state.json"
  }
}
