{
  "schedule": {
    "enabled": true,
    "bootTimeRefresh": true,
    "daysOfWeek": ["sunday"],
    "time": "03:00",
    "checkIntervalSeconds": 30.0
  },
  "api": {
    "retries": {
      "maxAttempts": 3,
      "backoffSeconds": 10
    }
  },
  "cache": {
    "maxAgeHours": 168,
    "forceRefresh": false
  },
  "providers": {
